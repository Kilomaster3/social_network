<div class="container">
  <div class="row">
    <div class="col-lg-6 mt-4">
      <h2>Edit Account <%= link_to "Back to Main Page", root_path, class: 'float-right btn btn-secondary' %></h2>

      <%= form_for(resource, as: resource_name, url: account_profile_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group mb-3">
          <div class="row">
            <div class="col-sm-4">
              <% if resource.avatar.attached? %>
                <%= image_tag resource.avatar.variant(resize: "100x100!"), class: 'rounded-circle'  %>
              <% else %>
                <%= image_tag gravatar_image_url(@account.email, size: 100), height: 100, width: 100, class: 'rounded-circle' %>
              <% end %>
              <div>
                <%= f.file_field :avatar%>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group mb-3">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, autofocus: true, class: 'form-control'%>
        </div>

        <div class="form-group mb-3">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group mb-3">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <%= content_tag :small, "#{ @minimum_password_length } characters minimum" if @minimum_password_length%>
        </div>

        <div class="form-group mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
        </div>

        <div class="form-group mb-3">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
        </div>

        <div class="form-group mt-4">
          <%= f.submit "Update", class: 'btn btn-success btn-lg'%>
        </div>
      <% end %>

      <p class="mt-2">What to close your account?<%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'ms-1' %></p>
    </div>
  </div>
</div>

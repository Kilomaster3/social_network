.container
  .main-body
    .row.gutters-sm
      .col-md-4.mb-3
        - @accounts.each do |account|
          .card
            .card-body
              .d-flex.flex-column.align-items-center.text-center
                %img.rounded-circle{alt: "Admin", src: "https://bootdey.com/img/Content/avatar/avatar7.png", width: "150"}/
                .mt-3
                  %h4
                    = link_to account.full_name, account_profile_path(account)
                    = render partial: 'account/online', locals: {account: account}
                  = link_to 'Write Message', messages_path, class: 'btn btn-outline-primary'

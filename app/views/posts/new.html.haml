.col-md-8.offset-2
  %h1.text-center New Blog Post
  = simple_form_for @post, url: posts_path do |f|
    = f.input :title
    = f.input :content
    = f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true}
    = f.label :image
    = f.file_field :image
    = f.select :status, ['Publish write now', 'Publish via'], selected: status_for(@post), class: 'form-select'
    .published-field
      = f.datetime_select :published_at, discard_year: true, discard_month: true
    = f.submit "Create Post", class: 'btn btn-lg btn-primary float-right'

.col-md-8.offset-2
  %h1.text-center Blog Posts #{link_to 'Add a Blog Post', new_post_path, class: 'btn btn-primary'}
  %hr/
- @posts.each do |post|
  .card
    .card-body
      %h3.card-title= post.title
      %p.card-text= truncate(post.content, length: 60)
      %p
        %small
          Tags: #{raw post.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ')}
          %h5 Comments (#{post.comments.size}) #{link_to 'Add Comment', new_post_comments_path(current_account), class: 'btn btn-primary'}
          = render partial: 'posts/comment', collection: post.comments.reverse
          = button_to "Like #{post.likes.count}", post_likes_path(post), method: :post
          = button_to ("Dislike #{post.dislikes.count}"), post_dislike_index_path(post), method: :post
          = button_to 'Delete', post, method: :delete
          = button_to 'Edit', edit_post_path(post)

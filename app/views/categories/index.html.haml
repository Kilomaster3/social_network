.row
  - @categories.each do |category|
    .col-md-4
      .card
        .card-body
          %h5.card-title= link_to category.name, edit_category_path(category)
          %p.card-text
            - category.interests.each do |interest|
              = interest.name
            %br
              = link_to 'Delete Category', category_path(category), method: :delete

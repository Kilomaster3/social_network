.container.h-100
  .row.h-100
    .col-sm-10.col-md-8.col-lg-6.mx-auto.d-table.h-100
      .d-table-cell.align-middle
        .card
          .card-body
            .col-xs-12.col-sm-8.offset-sm-2
              %h1.mt-3 Sign up via #{render 'devise/shared/google'}
              = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                = f.error_notification
                .form-inputs.mt-3
                  = f.input :email,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'mb-3', placeholder: 'example@gmail.com'}
                  = f.input :password,
                    input_html: { autocomplete: "new-password", class: 'mb-3', placeholder: '6 characters minimum' }
                  = f.input :password_confirmation,
                    input_html: { autocomplete: "new-password", class: 'mb-3' }
                .form-actions.mt-3
                  = f.button :submit, "Sign up", class: "btn btn-lg btn-primary"
                Alredy have account? #{ render "devise/shared/link" }

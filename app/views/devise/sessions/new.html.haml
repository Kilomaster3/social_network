.container.h-100
  .row.h-100
    .col-sm-10.col-md-8.col-lg-6.mx-auto.d-table.h-100
      .d-table-cell.align-middle
        .card
          .card-body
            .col-xs-12.col-sm-8.offset-sm-2
              %h1.mt-3 Login or #{render 'devise/shared/google'}
              = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                = f.error_notification
                .form-inputs.mt-3
                  = f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: 'mb-3' }
                  = f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: 'mb-3' }
                  = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
                .form-actions
                  = f.button :submit, "Log in", class: "btn btn-lg btn-primary mt-3"
                Click here if you forgot your password #{render 'devise/shared/forgot_password'}

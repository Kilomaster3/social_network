= render 'search/form'
.col-md-8.offset-2
.categories
  %ul
    %li.active
      = link_to "Recent", recent_posts_path, class: "nav-link"
    %li.active
      = link_to "Oldest", oldest_posts_path, class: "nav-link"
    %li.active
      = link_to "Search last posts", search_last_posts_path, class: "nav-link"
  %br
- posts.each do |post|
  .row
  .col-sm-12
    .panel.panel-white.post
      .post-heading
        .pull-left.image
          %img.img-circle.avatar{alt: "user profile image", src: "https://bootdey.com/img/Content/avatar/avatar1.png"}/
        .pull-left.meta
          .title.h5
            %a{href: account_profile_path(post.account)}
              %b= post.account.full_name
            create post.
          %h6.text-muted.time #{time_ago_in_words(post.created_at)} ago
      .post-image
        = link_to(image_tag(post.image.thumb.url, alt: 'Image'), post.image.url, target: '_blank') if post.image?
      .post-description
        %h4.card-title= post.title
        %p.card-text= truncate(post.content, length: 60)
        .stats
          %a.btn.btn-default#like_button{id: post.id}
            %i.fa.fa-thumbs-up.icon#like_count{id: post.id}
              = post.likes.count
          %a.btn.btn-default.stat-item{href: edit_post_path(post)}
            %i.fa.fa-pencil.icon
      .post-footer
        = link_to 'Delete', post_path(post), method: :delete, class: 'btn fa fa-times'
